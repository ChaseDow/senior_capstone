<div class="flex items-center justify-between px-4 py-3
            border-b border-emerald-900/30
            bg-[#15261d]">
  <div class="flex items-center gap-3 min-w-0">
    <% if leading %>
      <div class="shrink-0">
        <%= leading %>
      </div>
    <% end %>
    <div class="min-w-0">
      <div class="text-2xl md:text-3xl font-semibold tracking-tight text-zinc-100 truncate">
        <%= @title %>
      </div>
      <% if @subtitle.present? %>
        <div class="mt-0.5 text-sm text-zinc-400 truncate">
          <%= @subtitle %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex items-center gap-2">
    <%= actions if actions %>
  </div>
</div>
