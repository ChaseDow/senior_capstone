<header class="<%= wrapper_classes %>">
  <div class="flex h-16 w-full items-center gap-4 px-4">
    <div class="flex min-w-0 items-center gap-4">
      <% if left %>
        <div class="shrink-0"><%= left %></div>
      <% end %>

      <div class="min-w-0">
        <% if @title.present? %>
          <div class="truncate text-sm font-semibold text-zinc-100"><%= @title %></div>
        <% end %>
        <% if @subtitle.present? %>
          <div class="truncate text-xs text-zinc-400"><%= @subtitle %></div>
        <% end %>
      </div>
    </div>

    <% if actions %>
      <div class="ml-auto flex items-center gap-2">
        <%= actions %>
      </div>
    <% end %>
  </div>
</header>
