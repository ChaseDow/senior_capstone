<style>
  [data-agenda-item-card]:hover {
    background-color: var(--bg-hover);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.06),
      0 0 0 1px rgba(16, 185, 129, 0.35);
  }
</style>

<div
  class="h-full w-full flex flex-col rounded-2xl overflow-hidden
         border-2 border-emerald-800/60
         ring-2 ring-inset ring-emerald-400/15
         bg-zinc-950/95
         shadow-xl shadow-black/50
         <%= @class_name %>"
  data-controller="<%= @controller %>"
  data-agenda-count="<%= agenda_count %>"
>

  <div
    class="bg-[#233a2a]/92
           border-b border-emerald-400/20
           shadow-[inset_0_-1px_0_rgba(16,185,129,0.15)]
           px-4 py-3"
  >
    <div class="flex items-center justify-between">
      <div class="min-w-0">
        <div class="text-sm font-semibold text-emerald-100">
          <%= @title %>
        </div>
        <div class="mt-0.5 text-xs text-emerald-100/70">
          <%= subtitle_text %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex-1 min-h-0 bg-zinc-950/95">
    <div class="h-full overflow-auto px-3 py-3">
      <% if items.any? %>
        <div class="space-y-2 rounded-xl p-1 ring-1 ring-inset ring-white/5">
          <%= safe_join(items) %>
        </div>
      <% else %>
        <div class="rounded-2xl border border-white/10 bg-zinc-900/40 px-4 py-4 text-sm text-zinc-200">
          <%= @empty_message %>
        </div>
      <% end %>
    </div>
  </div>
</div>