<section class="<%= wrapper_classes %>">
  <div class="flex items-center justify-between border-b border-zinc-800 px-4 py-3">
    <div class="min-w-0">
      <div class="truncate text-sm font-semibold text-zinc-100"><%= @title %></div>
      <% if @subtitle.present? %>
        <div class="truncate text-xs text-zinc-400"><%= @subtitle %></div>
      <% end %>
    </div>
  </div>

  <div class="p-4">
    <% if items.any? %>
      <div class="space-y-2">
        <%= safe_join(items) %>
      </div>
    <% else %>
      <div class="rounded-xl border border-dashed border-zinc-800 bg-zinc-900/20 px-4 py-6 text-sm text-zinc-400">
        <%= @empty_message %>
      </div>
    <% end %>
  </div>
</section>
