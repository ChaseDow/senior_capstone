<div class="min-h-screen bg-gray-100 text-gray-900 p-6">
  <div class="max-w-3xl mx-auto space-y-6">
    <% if notice.present? %>
      <div class="rounded-xl bg-green-50 px-4 py-3 text-sm text-green-800 border border-green-200">
        <%= notice %>
      </div>
    <% end %>

    <div class="rounded-2xl bg-white shadow border border-gray-200 p-6 space-y-4">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="text-2xl font-semibold truncate"><%= @event.title.presence || "(Untitled)" %></h1>

          <p class="mt-1 text-sm text-gray-600">
            <%= @event.starts_at&.strftime("%b %d, %Y • %I:%M %p") %>
            <% if @event.ends_at.present? %>
              – <%= @event.ends_at.strftime("%I:%M %p") %>
            <% end %>
          </p>

          <% if @event.location.present? %>
            <p class="text-sm text-gray-600"><%= @event.location %></p>
          <% end %>
        </div>

        <div class="flex shrink-0 items-center gap-2">
          <%= link_to "Edit",
                      edit_event_path(@event),
                      class: "rounded-lg bg-gray-100 px-3 py-1 text-sm hover:bg-gray-200" %>

          <%= button_to "Delete",
                        event_path(@event),
                        method: :delete,
                        form: { data: { turbo_confirm: "Delete this event?" } },
                        class: "rounded-lg bg-red-600 px-3 py-1 text-sm text-white hover:bg-red-500" %>
        </div>
      </div>

      <% if @event.description.present? %>
        <div class="pt-2 border-t border-gray-200">
          <p class="whitespace-pre-wrap text-gray-800"><%= @event.description %></p>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-2">
      <%= link_to "Back to events",
                  events_path,
                  class: "rounded-lg bg-white border border-gray-200 px-4 py-2 text-sm hover:bg-gray-50 shadow-sm" %>
    </div>
  </div>
</div>
