<%= form_with model: event, class: "space-y-4" do |f| %>
  <% if event.errors.any? %>
    <div class="rounded-xl bg-red-50 p-4 text-red-800">
      <p class="font-medium">Please fix the following:</p>
      <ul class="mt-2 list-disc pl-6">
        <% event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-800" %>
    <%= f.text_field :title, class: "mt-1 w-full rounded-lg border-gray-300" %>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div>
      <%= f.label :starts_at, "Start time", class: "block text-sm font-medium text-gray-800" %>
      <%= f.datetime_local_field :starts_at, class: "mt-1 w-full rounded-lg border-gray-300" %>
    </div>

    <div>
      <%= f.label :ends_at, "End time (optional)", class: "block text-sm font-medium text-gray-800" %>
      <%= f.datetime_local_field :ends_at, class: "mt-1 w-full rounded-lg border-gray-300" %>
    </div>
  </div>

  <div>
    <%= f.label :location, class: "block text-sm font-medium text-gray-800" %>
    <%= f.text_field :location, class: "mt-1 w-full rounded-lg border-gray-300" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-800" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 w-full rounded-lg border-gray-300" %>
  </div>

  <div class="flex items-center gap-2">
    <%= f.submit class: "rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800" %>
    <%= link_to "Cancel", events_path, class: "rounded-lg bg-gray-100 px-4 py-2 text-sm hover:bg-gray-200" %>
  </div>
<% end %>
