<div class="min-h-screen bg-gray-100 text-gray-900 p-6">
  <div class="max-w-4xl mx-auto space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold">Events</h1>
        <p class="text-sm text-gray-600">Separate from classes and work.</p>
      </div>

      <%= link_to "New event",
                  new_event_path,
                  class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-500" %>
    </div>

    <% if notice.present? %>
      <div class="rounded-xl bg-green-50 px-4 py-3 text-sm text-green-800 border border-green-200">
        <%= notice %>
      </div>
    <% end %>

    <div class="rounded-2xl bg-white shadow border border-gray-200 overflow-hidden">
      <% if @events.any? %>
        <div class="divide-y divide-gray-200">
          <% @events.each do |event| %>
            <div class="p-4 flex items-start justify-between gap-4">
              <div class="min-w-0">
                <p class="font-medium truncate">
                  <%= link_to(event.title.presence || "(Untitled)",
                              event_path(event),
                              class: "hover:underline") %>
                </p>

                <p class="mt-1 text-sm text-gray-600">
                  <%= event.starts_at&.strftime("%b %d, %Y • %I:%M %p") %>
                  <% if event.ends_at.present? %>
                    – <%= event.ends_at.strftime("%I:%M %p") %>
                  <% end %>
                </p>

                <% if event.location.present? %>
                  <p class="text-sm text-gray-600"><%= event.location %></p>
                <% end %>

                <% if event.description.present? %>
                  <p class="mt-2 text-sm text-gray-700 line-clamp-2"><%= event.description %></p>
                <% end %>
              </div>

              <div class="flex shrink-0 items-center gap-2">
                <%= link_to "Edit",
                            edit_event_path(event),
                            class: "rounded-lg bg-gray-100 px-3 py-1 text-sm hover:bg-gray-200" %>

                <%= button_to "Delete",
                              event_path(event),
                              method: :delete,
                              form: { data: { turbo_confirm: "Delete this event?" } },
                              class: "rounded-lg bg-red-600 px-3 py-1 text-sm text-white hover:bg-red-500" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="p-6 text-sm text-gray-600">
          No events yet. Click <span class="font-medium">New event</span> to add one.
        </div>
      <% end %>
    </div>
  </div>
</div>
