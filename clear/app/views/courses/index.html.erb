<div class="rounded-2xl border border-emerald-900/35 bg-emerald-950/15 backdrop-blur-sm p-6">
  <div class="flex items-center justify-between">
    <div class="text-sm text-zinc-300">
      Your courses will show here.
    </div>

    <%= render Studs::PrimaryButtonComponent.new(
          label: "New course",
          href: new_course_path,
          color: :emerald
        ) %>
  </div>

  <div class="mt-4 overflow-hidden rounded-2xl border border-emerald-900/30 bg-emerald-950/10">
    <% if @courses.any? %>
      <div class="divide-y divide-emerald-900/25">
        <% @courses.each do |course| %>
          <div class="flex items-start justify-between gap-4 p-4 bg-emerald-950/10 hover:bg-emerald-900/10 transition">
            <div class="min-w-0">
              <p class="truncate font-medium text-zinc-100">
                <%= link_to(course.title.presence || "(Untitled)", course_path(course), class: "hover:underline") %>
              </p>

              <p class="mt-1 text-sm text-zinc-400">
                <% details = [] %>
                <% details << course.term if course.term.present? %>
                <% details << course.professor if course.professor.present? %>
                <% details << course.location if course.location.present? %>
                <%= details.join(" • ") %>
              </p>

              <% if course.meeting_days.present? %>
                <p class="mt-1 text-sm text-zinc-400">
                  <%= course.meeting_days %>
                  <% if course.start_time.present? && course.end_time.present? %>
                    • <%= course.start_time.strftime("%-I:%M%P") %> – <%= course.end_time.strftime("%-I:%M%P") %>
                  <% end %>
                </p>
              <% end %>
            </div>

            <div class="flex shrink-0 items-center gap-2">
              <%= render Studs::SecondaryButtonComponent.new(
                    path: edit_course_path(course),
                    label: "Edit",
                    size: :sm
                  ) %>

              <%= button_to "Delete",
                            course_path(course),
                            method: :delete,
                            form: { data: { turbo_confirm: "Delete this course?" } },
                            class: "inline-flex items-center justify-center rounded-xl px-3 py-2 text-sm font-medium
                                    border border-red-500/40 text-red-200 hover:bg-red-950/40 transition" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-6 text-sm text-zinc-400">No courses yet.</div>
    <% end %>
  </div>
</div>