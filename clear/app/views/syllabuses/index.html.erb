<% content_for :page_title, "Syllabuses" %>
<% content_for :page_subtitle, "Uploaded syllabuses" %>

<div class="rounded-2xl border border-emerald-900/35 bg-emerald-950/15 backdrop-blur-sm p-6">
  <div class="flex items-center justify-between">
    <div class="text-sm text-zinc-300">
      Your uploaded syllabuses will appear below.
    </div>


    <div class="flex justify-end space-x-5">
      <%= render Studs::SearchBarComponent.new(class_name: "w-80", placeholder: "Searchâ€¦" ) %>
      <%= render Studs::PrimaryButtonComponent.new(
            label: "New Syllabus",
            href: new_syllabus_path,
            color: :emerald
          ) %>
    </div>
  </div>


  <div class="mt-4 overflow-hidden rounded-2xl border border-emerald-900/30 bg-emerald-950/10">
    <% if @syllabuses.any? %>
      <div class="divide-y divide-emerald-900/25">
        <% @syllabuses.each do |syllabus| %>
          <div class="flex items-start justify-between gap-4 p-4 bg-emerald-950/10 hover:bg-emerald-900/10 transition">
            <div class="min-w-0">
              <p class="truncate font-medium text-zinc-100">
                <%= link_to syllabus.title.presence || "(Untitled)", syllabus_path(syllabus), class: "hover:underline" %>
              </p>

              <% if syllabus.file.attached? %>
                <p class="mt-1 text-sm text-zinc-400">
                  File: <%= syllabus.file.filename.to_s %>
                </p>
              <% end %>
            </div>

            <div class="flex shrink-0 items-center gap-2">
              <%= render Studs::SecondaryButtonComponent.new(
                    path: syllabus_path(syllabus),
                    label: "View",
                    size: :sm
                  ) %>

              <%= turbo_frame_tag dom_id(syllabus, :status), src: status_syllabus_path(syllabus) do %>
                <%= render "syllabuses/status", syllabus: syllabus %>
              <% end %>

              <%= button_to "Delete",
                    syllabus_path(syllabus),
                    method: :delete,
                    form: { data: { turbo_confirm: "Delete this syllabus?" } },
                    class: "inline-flex items-center justify-center rounded-xl px-3 py-2 text-sm font-medium
                    border border-red-500/40 text-red-200 hover:bg-red-950/40 transition"
              %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-6 text-sm text-zinc-400">Upload your syllabi by pressing 'New Syllabus' then click 'Click to browse your files'. Find the your syllabus and upload from there.</div>
    <% end %>
  </div>
</div>
