<div class="p-6">
  <div class="text-xl font-semibold text-zinc-100 mb-4">Drafts</div>
  <div class="space-y-2">
    <% @drafts.each do |d| %>
      <div class="rounded-xl border border-zinc-800 bg-zinc-950/40 p-4 flex items-center justify-between">
        <div>
          <div class="text-zinc-100 font-semibold"><%= d.title %></div>
          <div class="text-xs text-zinc-500">
            <%= d.status %> â€¢ <%= d.created_at.strftime("%b %-d, %Y %-I:%M %p") %>
          </div>
        </div>
        <div class="flex gap-2">
          <%= link_to "Open",
            dashboard_path(start_date: Date.current, draft_id: d.id),
            class: "rounded-xl border border-zinc-800 bg-zinc-950/40 px-3 py-1.5 text-sm text-zinc-200 hover:border-zinc-600" %>
          <% if d.open? %>
            <%= button_to "Discard",
              discard_calendar_draft_path(d),
              method: :post,
              class: "rounded-xl border border-zinc-800 bg-zinc-950/40 px-3 py-1.5 text-sm text-zinc-200 hover:border-zinc-600" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>