<div class="min-h-screen">
  <main class="min-w-0 flex-1 px-6 py-6">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-zinc-100">Profile</h1>
      <p class="mt-1 text-sm text-zinc-400">Manage your account settings.</p>
    </div>
    <div class="grid gap-4 lg:grid-cols-3">
      <!-- Account Info -->
      <section class="rounded-2xl border border-zinc-800 bg-zinc-900/40 p-5 lg:col-span-2">
        <div class="text-xs text-zinc-400">Account</div>
        <div class="mt-4 space-y-4">
          <div>
            <div class="text-sm text-zinc-400">Email</div>
            <div class="mt-1 text-base font-medium text-zinc-100">
              <%= @user.email %>
            </div>
          </div>
          <!-- Placeholder for future fields -->
          <div class="pt-2 border-t border-zinc-800">
            <div class="text-sm text-zinc-400">More settings</div>
            <div class="mt-1 text-xs text-zinc-500">
              Coming soon (name, timezone, notifications, etc.)
            </div>
          </div>
        </div>
        <div class="mt-6 flex flex-wrap gap-2">
          <%= link_to dashboard_path do %>
            <%= render Studs::SecondaryButtonComponent.new(label: "Back to dashboard", color: :zinc, size: :md) %>
          <% end %>
        </div>
      </section>
      <!-- Security -->
      <section class="rounded-2xl border border-zinc-800 bg-zinc-900/40 p-5">
        <div class="text-xs text-zinc-400">Security</div>
        <div class="mt-4 space-y-3">
          <div class="text-sm text-zinc-100">Password</div>
          <div class="pt-2">
            <%= link_to edit_profile_path(anchor: "password") do %>
              <%= render Studs::SecondaryButtonComponent.new(label: "Change password", color: :red, size: :md) %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </main>
</div>
